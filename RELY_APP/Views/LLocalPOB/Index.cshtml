                var rightcolumn = $('<div style="float: left; width: 40%;"></div>');
                container.append(leftcolumn);
                container.append(rightcolumn);
                var WFOrdinal = "<div style='margin: 10px;'><b>WF Ordinal:</b> " + datarecord.WFOrdinal + "</div>";
