        // This function is used for displaying row details
        var initrowdetails = function (index, parentElement, gridElement, datarecord) {
            var tabsdiv = null;
            var information = null;
            var Attributes = null;
            var Description = null;
           // debugger;
            tabsdiv = $($(parentElement).children()[0]);
            if (tabsdiv != null) {
